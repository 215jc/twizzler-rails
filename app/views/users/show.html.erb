<p id="notice"><%= notice %></p>

<p>
  <strong>Username:</strong>
  <%= @user.username %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Fname:</strong>
  <%= @user.fname %>
</p>

<p>
  <strong>Lname:</strong>
  <%= @user.lname %>
</p>

<p>
  <strong>Headline:</strong>
  <%= @user.headline %>
</p>

<hr>

<h2>Twizzles by 
  <a href="/users/<%= @user.id %>">
    <%= @user.username %>
  </a>
</h2>

  <% @user.twizzles.sort_by { |key| key[:updated_at] }.reverse!.each do |twizzle| %>

    <p>
      <%= twizzle.content %>
    </p>

  <% end %>

<hr>

<h2>
  <a href="/users/<%= @user.id %>">
    <%= @user.username %>
  </a>
 is following
</h2>

  <% @user.following.sort_by { |key| key[:username] }.each do |user| %>

  <p>
    <a href="/users/<%= user.id %>">
      <%= user.username %>
    </a>
  </p>

  <% end %>

<hr>

<h2>
  <a href="/users/<%= @user.id %>">
    <%= @user.username %>
  </a>
   is followed by
</h2>

<% @user.followers.sort_by { |key| key[:username] }.each do |user| %>

  <p>
    <a href="/users/<%= user.id %>">
      <%= user.username %>
    </a>
  </p>

<% end %>

<hr>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>


